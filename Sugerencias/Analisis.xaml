<Page x:Class="Sugerencias.Analisis"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Sugerencias"
      mc:Ignorable="d" 
      d:DesignHeight="400" d:DesignWidth="600"
      Title="Analisis"
      FontFamily="Segoe UI Light">
    <Grid>
        <ListView x:Name="LvDatos">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Palabra"
                                    DisplayMemberBinding="{Binding Palabra}" Width="150">
                        
                    </GridViewColumn>
                    <GridViewColumn Header="Es Conector"
                                    DisplayMemberBinding="{Binding Palabra}" Width="150">

                    </GridViewColumn>
                    <GridViewColumn Header="# de Caracteres"
                                    DisplayMemberBinding="{Binding Palabra}" Width="150">

                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Page>
