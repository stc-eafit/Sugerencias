<Page x:Class="Sugerencias.Inicio"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Sugerencias"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="Inicio">

    <Grid  Margin="10" Background="Azure" Height="Auto">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="8*"></RowDefinition>
            <RowDefinition Height="2*"></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" FontWeight="Bold" TextAlignment="Center" FontSize="14">Por favor déjanos tu comentario</TextBlock>
        <TextBox Grid.Row="1" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" MaxLength="10000"></TextBox>
        <Button  Padding="5" Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="12" Margin="0,20,0,0" Click="Button_Click">Analizar</Button>
    </Grid>
</Page>
